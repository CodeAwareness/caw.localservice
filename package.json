{
    "name": "express-typescript-starter",
    "version": "0.1.0",
    "description": "A starting point for Node.js express apps with TypeScript",
    "repository": {
        "type": "git",
        "url": "https://github.com/Microsoft/TypeScript-Node-Starter"
    },
    "author": "Bowden Kelly",
    "license": "MIT",
    "scripts": {
        "build-ts": "tsc --build tsconfig.json",
        "build": "npm run build-ts && npm run lint",
        "lint": "tsc --noEmit && eslint \"src/**/*.{js,ts}\" --quiet --fix",
        "serve:dev": "nodemon --inspect dist/server.js",
        "serve": "node dist/index.js",
        "start": "NODE_ENV=production npm run serve",
        "start:win": "$env:NODE_ENV='production' & npm run serve",
        "dev": "LOCAL=1 NODE_ENV=development npm run watch",
        "dev:win": "$env:NODE_ENV='development' & npm run serve",
        "test": "LOCAL=1 jest --forceExit --verbose",
        "test:coverage": "LOCAL=1 jest --forceExit --coverage --verbose",
        "test:watch": "LOCAL=1 jest --watchAll --verbose",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,green.bold\" \"npm run watch:ts\" \"npm run serve:dev\"",
        "watch:ts": "tsc -w"
    },
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "@keyv/sqlite": "^2.0.2",
        "axios": "^0.21.1",
        "body-parser": "^1.19.0",
        "child_process": "^1.0.2",
        "chokidar": "^3.5.1",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-rate-limit": "^5.2.6",
        "express-routemap": "^1.6.0",
        "form-data": "^4.0.0",
        "fs": "^0.0.1-security",
        "http": "*",
        "http-status": "^1.5.0",
        "keyv": "^4.0.3",
        "lodash": "^4.17.21",
        "mkdirp": "^1.0.4",
        "morgan": "^1.10.0",
        "node-powershell": "^4.0.0",
        "path": "^0.12.7",
        "pm2": "^5.0.4",
        "rimraf": "^3.0.2",
        "socket.io": "^4.1.2",
        "socket.io-client": "^4.1.3",
        "stream": "^0.0.2",
        "tar": "^6.1.0",
        "tmp": "^0.2.1",
        "uuid": "^8.3.2",
        "validator": "^13.6.0",
        "winston": "^3.3.3",
        "xss-clean": "^0.1.1",
        "zlib": "^1.0.5"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.14.5",
        "@babel/preset-typescript": "^7.14.5",
        "@types/express": "^4.17.12",
        "@types/hapi__joi": "^17.1.6",
        "@types/keyv": "^3.1.1",
        "@types/mkdirp": "^1.0.1",
        "@types/nock": "^11.1.0",
        "@types/node": "^15.12.2",
        "@types/pkg-dir": "^2.0.1",
        "@types/supertest": "^2.0.11",
        "@types/tmp": "^0.2.0",
        "@typescript-eslint/eslint-plugin": "^4.26.1",
        "@typescript-eslint/parser": "^4.26.1",
        "chai": "4.3.0",
        "concurrently": "6.0.2",
        "eslint": "7.19.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-jest": "^24.3.6",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.1.0",
        "eslint-plugin-security": "^1.4.0",
        "eslint-watch": "^7.0.0",
        "faker": "^5.5.3",
        "husky": "^6.0.0",
        "jest": "^27.0.4",
        "lint-staged": "^11.0.0",
        "nock": "^13.1.0",
        "nodemon": "2.0.7",
        "sass": "1.32.6",
        "shelljs": "0.8.4",
        "supertest": "6.1.3",
        "ts-jest": "26.5.0",
        "ts-node": "9.1.1",
        "typescript": "4.1.3"
    }
}
