{
  "name": "peer8-service",
  "version": "1.0.0",
  "description": "Peer8 Client Service",
  "main": "src/index.js",
  "repository": "https://github.com/peer8/peer8.service.git",
  "author": "Mark Vasile <mark.vasile@peer8.com>",
  "private": false,
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "pm2 start ecosystem.config.json --no-daemon",
    "build": "flow-remove-types ./src -d ./dist --all --pretty -q",
    "serve": "cross-env NODE_ENV=development node dist/index.js",
    "dev": "cross-env NODE_ENV=development nodemon --watch src --watch tests --exec 'yarn build && yarn serve'",
    "dev:full": "cross-env NODE_ENV=development nodemon --watch src --exec 'yarn build && yarn lint:fix && yarn flow && yarn serve'",
    "flow": "flow",
    "flow:check": "flow check ./src",
    "test": "jest -i --verbose",
    "test:watch": "jest -i --watchAll --verbose",
    "coverage": "jest -i --coverage",
    "lint": "eslint src",
    "lint:watch": "esw -w --color src",
    "postinstall": "husky install"
  },
  "_moduleAliases": {
    "@": "dist"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@keyv/sqlite": "^2.0.2",
    "axios": "^0.21.1",
    "body-parser": "^1.19.0",
    "child_process": "^1.0.2",
    "chokidar": "^3.5.1",
    "cors": "^2.8.5",
    "cross-env": "^7.0.3",
    "dotenv": "^9.0.2",
    "express": "^4.17.1",
    "express-rate-limit": "^5.2.6",
    "express-routemap": "^1.6.0",
    "form-data": "^4.0.0",
    "fs": "*",
    "http": "*",
    "http-status": "^1.5.0",
    "keyv": "^4.0.3",
    "lodash": "^4.17.21",
    "mkdirp": "^1.0.4",
    "module-alias": "^2.2.2",
    "morgan": "^1.10.0",
    "path": "^0.12.7",
    "rimraf": "^3.0.2",
    "socket.io": "^4.1.2",
    "stream": "^0.0.2",
    "tar": "^6.1.0",
    "tmp": "^0.2.1",
    "uuid": "^8.3.2",
    "validator": "^13.6.0",
    "winston": "^3.3.3",
    "xss-clean": "^0.1.1",
    "zlib": "^1.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.13.16",
    "@babel/node": "^7.13.13",
    "@babel/preset-flow": "^7.13.13",
    "babel-eslint": "^10.1.0",
    "babel-flow": "^2.0.2",
    "babel-jest": "^26.6.3",
    "babel-plugin-syntax-flow": "^6.18.0",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.24.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-flowtype": "^5.7.1",
    "eslint-plugin-flowtype-errors": "^4.4.0",
    "eslint-plugin-import": "^2.23.3",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-security": "^1.4.0",
    "eslint-watch": "^7.0.0",
    "faker": "^5.5.3",
    "flow-bin": "^0.102.0",
    "flow-remove-types": "^2.149.0",
    "flow-typed": "^3.3.1",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "node-mocks-http": "^1.10.1",
    "nodemon": "^2.0.7",
    "supertest": "^6.1.3"
  }
}
