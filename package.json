{
    "name": "code-awareness-local-service",
    "version": "0.1.0",
    "description": "Local service to run at login, or perhaps manually started. This is required in order to sync the diffs between different clients and the codeAwareness server.",
    "repository": {
        "type": "git",
        "url": "https://github.com/CodeAwareness/cA.local"
    },
    "author": "Mark Vasile",
    "license": "MIT",
    "scripts": {
        "build-ts": "tsc --build tsconfig.build.json",
        "build": "rm -rf dist && npm run build-ts && tsc-alias && npm run lint:build",
        "lint:build": "eslint \"src/**/*.{js,ts}\" --fix",
        "lint": "eslint \"src/**/*.{js,ts}\" \"tests/integration/*.{js,ts}\" \"tests/unit/*.{js,ts}\" \"tests/utils/*.{js,ts}\" --fix",
        "docs": "typedoc src/index.ts",
        "dev": "cross-env NODE_ENV=development DEBUG='socket.io:client*,socket.io:namespace*' nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
        "dev:pm2": "NODE_ENV=development DEBUG='socket.io:client*,socket.io:namespace*' pm2-dev start --interpreter none 'ts-node src/index.ts'",
        "dev:win": "$env:NODE_ENV='development' & npm run dev",
        "start": "NODE_ENV=production node dist/src/index.js",
        "start:win": "cross-env NODE_ENV='production' node dist/index.js",
        "test": "NODE_ENV=test jest --verbose",
        "test:watch": "NODE_ENV=test jest --verbose --watchAll",
        "test:coverage": "NODE_ENV=test jest --forceExit --coverage --verbose",
        "test:build:watch": "concurrently --raw -k -n \"TypeScript,Node\" \"npm:dev\" \"npm:test\" ",
        "watch:ts": "tsc -w --pretty"
    },
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "@keyv/sqlite": "^3.6.5",
        "axios": "^1",
        "body-parser": "^1.20.2",
        "child_process": "^1.0.2",
        "chokidar": "^3.5.3",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-rate-limit": "^6.9.0",
        "express-routemap": "^1.6.0",
        "express-winston": "^4.2.0",
        "form-data": "^4.0.0",
        "fs": "^0.0.1-security",
        "http": "*",
        "http-status": "^1.6.2",
        "keyv": "^4.5.3",
        "lodash": "^4.17.21",
        "mkdirp": "^3.0.1",
        "morgan": "^1.10.0",
        "morgan-json": "^1.1.0",
        "node-powershell": "^5.0.1",
        "office-addin-dev-certs": "^1.11.6",
        "path": "^0.12.7",
        "rimraf": "^5.0.1",
        "tar": "^6.1.15",
        "tmp": "^0.2.1",
        "uuid": "^9.0.0",
        "zlib": "^1.0.5"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.22.10",
        "@babel/preset-typescript": "^7.22.5",
        "@faker-js/faker": "^8.0.2",
        "@types/cors": "^2.8.13",
        "@types/express": "^4.17.17",
        "@types/hapi__joi": "^17.1.9",
        "@types/jest": "^29.5.3",
        "@types/keyv": "^3.1.4",
        "@types/lodash": "^4.14.197",
        "@types/mkdirp": "^1.0.2",
        "@types/nock": "^11.1.0",
        "@types/node": "^20.5.1",
        "@types/supertest": "^2.0.12",
        "@types/tmp": "^0.2.3",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "@typescript-eslint/parser": "^6.4.0",
        "babel-jest": "^29.6.2",
        "chai": "4.3.7",
        "concurrently": "8.2.0",
        "eslint": "8.47.0",
        "eslint-config-standard": "^17.1.0",
        "eslint-plugin-import": "^2.28.1",
        "eslint-plugin-jest": "^27.2.3",
        "eslint-plugin-n": "^16.0.1",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.1.1",
        "eslint-plugin-security": "^1.7.1",
        "eslint-plugin-tsdoc": "^0.2.17",
        "eslint-watch": "^8.0.0",
        "husky": "^8.0.3",
        "jest": "^29.6.2",
        "json-schema-faker": "^0.5.3",
        "lint-staged": "^14.0.0",
        "nock": "^13.3.3",
        "nodemon": "^3.0.1",
        "sass": "1.66.1",
        "shelljs": "0.8.5",
        "supertest": "6.3.3",
        "ts-jest": "^29.1.1",
        "ts-node": "^10.9.1",
        "tsc-alias": "^1.8.7",
        "tsconfig-paths": "^4.2.0",
        "typescript": "5.1.6"
    }
}
