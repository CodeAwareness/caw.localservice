{
    "name": "code-awareness-local-service",
    "version": "0.1.0",
    "description": "Local service to run at login, or perhaps manually started. This is required in order to sync the diffs between different clients and the codeAwareness server.",
    "repository": {
        "type": "git",
        "url": "https://github.com/CodeAwareness/cA.local"
    },
    "author": "Mark Vasile",
    "license": "MIT",
    "scripts": {
        "build-ts": "tsc --build tsconfig.json",
        "build": "npm run build-ts && npm run lint",
        "lint": "eslint \"src/**/*.{js,ts}\" \"tests/**/*.{js,ts}\" --fix",
        "dev": "NODE_ENV=development LOCAL=1 DEBUG='socket.io:client*,socket.io:namespace*,socket.io:socket*' nodemon --watch 'src/**/*.ts' --exec 'ts-node' src/index.ts",
        "dev:win": "$env:NODE_ENV='development' & npm run dev",
        "start": "NODE_ENV=production node dist/index.js",
        "start:win": "cross-env NODE_ENV='production' node dist/index.js",
        "test": "LOCAL=1 jest --forceExit --verbose",
        "test:coverage": "LOCAL=1 jest --forceExit --coverage --verbose",
        "test:watch": "LOCAL=1 jest --watchAll --verbose",
        "watch": "concurrently --raw -k -n \"TypeScript,Node\" \"yarn watch:ts\" \"yarn serve:dev\"",
        "watch:ts": "tsc -w --pretty"
    },
    "dependencies": {
        "@hapi/joi": "^17.1.1",
        "@keyv/sqlite": "^2.1.0",
        "axios": "^0.25.0",
        "body-parser": "^1.19.1",
        "chalk": "^5.0.0",
        "child_process": "^1.0.2",
        "chokidar": "^3.5.3",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^14.2.0",
        "express": "^4.17.2",
        "express-rate-limit": "^6.1.0",
        "express-routemap": "^1.6.0",
        "express-winston": "^4.2.0",
        "form-data": "^4.0.0",
        "fs": "^0.0.1-security",
        "http": "*",
        "http-status": "^1.5.0",
        "keyv": "^4.0.5",
        "lodash": "^4.17.21",
        "mkdirp": "^1.0.4",
        "mongoose": "^6.1.7",
        "morgan": "^1.10.0",
        "morgan-json": "^1.1.0",
        "node-powershell": "^5.0.1",
        "path": "^0.12.7",
        "pm2": "^5.1.2",
        "rimraf": "^3.0.2",
        "socket.io": "^4.4.1",
        "socket.io-client": "^4.4.1",
        "stream": "^0.0.2",
        "tar": "^6.1.11",
        "tmp": "^0.2.1",
        "uuid": "^8.3.2",
        "validator": "^13.7.0",
        "winston": "^3.4.0",
        "xss-clean": "^0.1.1",
        "zlib": "^1.0.5"
    },
    "devDependencies": {
        "@babel/preset-env": "^7.16.10",
        "@babel/preset-typescript": "^7.16.7",
        "@types/cors": "^2.8.12",
        "@types/express": "^4.17.13",
        "@types/hapi__joi": "^17.1.8",
        "@types/jest": "^27.4.0",
        "@types/keyv": "^3.1.3",
        "@types/lodash": "^4.14.178",
        "@types/mkdirp": "^1.0.2",
        "@types/nock": "^11.1.0",
        "@types/node": "^17.0.10",
        "@types/pkg-dir": "^2.0.1",
        "@types/supertest": "^2.0.11",
        "@types/tmp": "^0.2.3",
        "@typescript-eslint/eslint-plugin": "^5.10.0",
        "@typescript-eslint/parser": "^5.10.0",
        "babel-jest": "^27.4.6",
        "chai": "4.3.4",
        "concurrently": "7.0.0",
        "eslint": "8.7.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-jest": "^25.7.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^6.0.0",
        "eslint-plugin-security": "^1.4.0",
        "eslint-watch": "^8.0.0",
        "faker": "^6.6.6",
        "husky": "^7.0.4",
        "jest": "^27.4.7",
        "lint-staged": "^12.2.1",
        "nock": "^13.2.2",
        "nodemon": "^2.0.15",
        "sass": "1.49.0",
        "shelljs": "0.8.5",
        "supertest": "6.2.2",
        "ts-jest": "^27.1.3",
        "ts-node": "^10.4.0",
        "tsconfig-paths": "^3.12.0",
        "typescript": "4.5.4"
    }
}
