{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ]
    }
  },
  "types": [ "node", "jest" ],
  "rules": {
    "@typescript-eslint/ban-ts-comment": 0
  },
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
