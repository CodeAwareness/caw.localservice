{
  "compilerOptions": {
    "baseUrl": ".",
		"target": "es2019",
    "outDir": "dist",
    "module": "commonjs",
    "moduleResolution": "node16",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "lib": [
      "es2019",
      "dom"
    ],
    "paths": {
      "@/*": [ "src/*" ]
    }
  },
  "include": [
    "tests",
    "src"
  ],
  "exclude": [
    "./tests/fixtures/**/*",
    "./dist",
    "node_modules"
  ],
  "types": [ "node", "jest" ],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  },
  "typedocOptions": {
    "entryPoints": ["src"],
    "out": "docs"
  }
}
